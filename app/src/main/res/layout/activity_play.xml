<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/play_page_default_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_name"
                android:text="歌曲名"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_desc"
                android:textSize="12sp"
                android:text="描述"
                android:layout_marginTop="3dp"
                android:textColor="#7bffffff"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/vp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iv_index1"
            android:src="@drawable/ic_seek_bar_progress_btn"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iv_index2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_seek_bar_volume_btn"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_start_time"
                android:textColor="#ffffff"
                android:text="00:00"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:layout_height="1dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_seek_bar_progress_btn"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_end_time"
                android:textColor="#ffffff"
                android:text="30:00"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="wrap_content"
               android:id="@+id/iv_"
               android:src="@drawable/ic_play_btn_loop_pressed"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center"
               android:gravity="center_vertical"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:src="@drawable/ic_play_btn_prev"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:src="@drawable/ic_play_btn_play"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:src="@drawable/ic_play_btn_next"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </FrameLayout>
    </LinearLayout>
</LinearLayout>